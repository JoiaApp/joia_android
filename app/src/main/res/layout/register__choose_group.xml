<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <com.joiaapp.joia.CustomFontTextView
        android:id="@+id/tvChooseGroupExplanation"
        style="@style/RegisterExplanation"
        android:text="Welcome to Joia, let's begin with your group..."/>

    <Button
        android:id="@+id/btnJoinAGroup"
        style="@style/OrangeButton"
        android:layout_marginTop="70dp"
        android:text="Join a Group"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/btnCreateAGroup"
        style="@style/OrangeButton"
        android:layout_marginTop="20dp"
        android:text="Create a Group"
        android:textAlignment="center"/>

</LinearLayout>