<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/vfWrite"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rlPublishSuccess"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvPublishSuccessTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivPublishSuccess"
            android:layout_centerHorizontal="true"
            android:text="Great Job"
            android:textStyle="normal|bold"/>

        <Button
            android:id="@+id/btnGoToJournal"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tvPublishSuccessMessage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:background="@drawable/button_background"
            android:text="Go to Journal"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvPublishSuccessMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/ivPublishSuccess"
            android:layout_alignStart="@+id/ivPublishSuccess"
            android:layout_below="@+id/tvPublishSuccessTitle"
            android:layout_marginTop="15dp"
            android:text="Your messages have been published to Friends &amp; Family. There have been 24 new messages posted today in your group journal."
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/ivPublishSuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            app:srcCompat="@drawable/icon_write"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlWriteIntro"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:text="Think of 3 Positive Moments"
            android:textStyle="normal|bold"/>

        <Button
            android:id="@+id/btnWriteGetStarted"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:background="@drawable/button_background"
            android:text="Get Started"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageView2"
            android:layout_alignStart="@+id/imageView2"
            android:layout_below="@+id/textView"
            android:layout_marginTop="15dp"
            android:text="Reflect on your day and identify your most positive moments. Show others in your group your appreciation by mentioning them."
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            app:srcCompat="@drawable/icon_write"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llWriteForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/tvWriteMessageIndex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="7dp"
            android:paddingStart="7dp"
            android:text="1 of 3 Today"
            android:textColor="@android:color/holo_orange_light"/>

        <Spinner
            android:id="@+id/spPrompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etMessageText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="top"
            android:hint="enter positive experience here"
            android:inputType="textMultiLine"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlWriteReview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lvReviewMessages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:padding="15dp"/>

        <Button
            android:id="@+id/btnPublishToGroup"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom|center"
            android:background="@drawable/button_background"
            android:text="Publish to Group"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12sp"/>
    </RelativeLayout>

</ViewFlipper>