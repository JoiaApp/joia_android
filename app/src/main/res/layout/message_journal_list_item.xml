<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="10dp">

    <ImageView
        android:id="@+id/ivMessageAuthorIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        app:srcCompat="@mipmap/ic_launcher"/>

    <com.joiaapp.joia.CustomFontTextView
        android:text="Author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvMessageAuthor"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ivMessageAuthorIcon"
        style="@style/Caption"/>

    <com.joiaapp.joia.CustomFontTextView
        android:text="Bacon ipsum dolor amet flank picanha tail short ribs, turducken brisket pork bresaola burgdoggen cupim swine landjaeger leberkas. Fatback meatloaf ground round sirloin, t-bone bacon pork frankfurter. Salami tail t-bone tri-tip, meatloaf biltong landjaeger shank."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvMessageText"
        android:layout_below="@+id/tvMessageAuthor"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/ivMessageAuthorIcon"
        style="@style/Paragraph"/>

    <com.joiaapp.joia.CustomFontTextView
        android:text="with somebody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvMessageMentions"
        android:layout_below="@+id/tvMessageText"
        android:layout_alignStart="@+id/tvMessageText"
        android:layout_marginTop="10dp"
        style="@style/Caption"/>
</RelativeLayout>
