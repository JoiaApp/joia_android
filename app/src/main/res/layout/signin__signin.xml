<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rlRegisterSignIn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true">

    <com.joiaapp.joia.CustomFontTextView
        android:id="@+id/tvEmail"
        style="@style/FieldLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_alignStart="@+id/etEmail"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/tvEmail"
        android:layout_alignStart="@+id/tvPassword"/>

    <com.joiaapp.joia.CustomFontTextView
        android:id="@+id/tvPassword"
        style="@style/FieldLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_below="@+id/etEmail"
        android:layout_alignStart="@+id/etPassword"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/tvPassword"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnSubmitSignIn"
        style="@style/OrangeButton"
        android:layout_marginTop="30dp"
        android:text="Submit"
        android:layout_below="@+id/etPassword"
        android:layout_toEndOf="@+id/tvEmail"/>

    <Button
        android:id="@+id/btnForgotPassword"
        style="@style/LinkButton"
        android:text="Forgot Password"
        android:layout_below="@+id/btnSubmitSignIn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"/>

</RelativeLayout>